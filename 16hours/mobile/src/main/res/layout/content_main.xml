<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.androidplot.xy.XYPlot
        android:id="@+id/accPlot"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_marginTop="10px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        title="Accelerometer readings"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/accCaption1"
        android:text="(Accelerometer: no data)"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#0000FF"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/accCaption2"
        android:text=""
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#0000FF"/>

    <com.androidplot.xy.XYPlot
        android:id="@+id/gyroPlot"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_marginTop="10px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        title="Gyroscope readings"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gyroCaption1"
        android:text="(Gyroscope: no data)"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#0000FF"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gyroCaption2"
        android:text=""
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#0000FF"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:text=""
        android:gravity="center"
        android:layout_marginTop="20px"
        android:textSize="10sp"
        android:textColor="#111111"/>
</LinearLayout>