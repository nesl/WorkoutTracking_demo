<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="3dip">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:maxWidth="50dp"
        android:scaleType="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lying_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/lying"
            style="@android:style/Widget.Button"
            android:clickable="false"
            android:layout_marginRight="5sp"/>
        />

        <TextView
            android:id="@+id/sitting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/sitting"
            style="@android:style/Widget.Button"
            android:clickable="false"
            android:layout_marginRight="5sp"/>

        <TextView
            android:id="@+id/running_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/running"
            style="@android:style/Widget.Button"
            android:clickable="false"
            android:layout_marginRight="5sp"/>

        <TextView
            android:id="@+id/walking_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/walking"
            style="@android:style/Widget.Button"
            android:clickable="false"
            android:layout_marginRight="5sp"/>

        <TextView
            android:id="@+id/bench_rep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/benchpress"
            style="@android:style/Widget.Button"
            android:clickable="false"
            android:layout_marginRight="5sp" />

        <TextView
            android:id="@+id/bench_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/deadlift_rep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/deadlift"
            style="@android:style/Widget.Button"
            android:clickable="false"
            android:layout_marginRight="5sp"/>

        <TextView
            android:id="@+id/deadlift_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/squat_rep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/squat"
            style="@android:style/Widget.Button"
            android:clickable="false"
            android:layout_marginRight="5sp"/>

        <TextView
            android:id="@+id/squat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>

</LinearLayout>